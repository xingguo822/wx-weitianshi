<view class='buttonBtn flex'>
  <view class="flex subOperation">
    <block wx:for='{{subOperation}}' wx:key='{{item.id}}'>
      <view class='subBtn' bindtap='{{item.eventName}}'>
        <image src='{{item.picUrl}}' class='subBtnPic'></image>
        <view class='subBtnText'>{{item.text}}</view>
      </view>
    </block>
  </view>
  <button class='mainOperation' bindtap="mainOperation" hover-class="t-redColor">{{mainOperation.value}}</button>
</view>

