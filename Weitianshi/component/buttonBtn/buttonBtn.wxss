.flex {
  display: flex;
}

.buttonBtn {
  justify-content: space-between;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 99999;
  background: white;
}

.subOperation {
  width: 100%;
  flex: 3;
}

.subBtn {
  text-align: center;
  flex: 1;
}

.subBtnPic {
  width: 38rpx;
  height: 34rpx;
  display: block;
  margin: 20rpx auto;
  margin-bottom: 10rpx;
}

.subBtnText {
  font-size: 20rpx;
  color: #333;
}

.mainOperation {
  flex: 1.2;
  background: #e43d59;
  height: 104rpx;
  line-height: 104rpx;
  color: white;
}
