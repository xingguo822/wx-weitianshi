/*-------------------------------------筛选和搜索框--------------------------------------*/

.screen {
  background: #fff;
  width: 750rpx;
  height: 80rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 80rpx;
  text-align: center;
  z-index: 999;
}

.withAnimate {
  transition: all 600ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}

#searchModel .tabIndex {
  width: 25%;
  vertical-align: center;
}

#searchModel .tabIndex image {
  width: 12rpx;
  height: 6rpx;
  padding-bottom: 6rpx;
}

.dropDown {
  position: absolute;
  top: 80rpx;
  left: 0;
  background: white;
  z-index: 9999;
  /* padding-top: 20rpx; */
  width: 100%;
}

#searchModel .dropTitle {
  color: #333;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  text-align: left;
  margin-left: 34rpx;
}

#searchModel .dropFlex {
  flex-wrap: wrap;
  max-height: 840rpx;
  padding-top: 16rpx;
}

#searchModel .checkbox {
  width: 144rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 1px solid #f0f0f0;
  border-radius: 4rpx;
  margin-left: 32rpx;
  margin-bottom: 32rpx;
  text-align: center;
}

#searchModel .longCheckBox {
  width: 208rpx;
}

#searchModel .btnGroup {
  padding-bottom: 20rpx;
}

#searchModel .btnGroup button {
  width: 322rpx;
  height: 88rpx;
  color: white;
  background: #40587a;
  border-radius: 4px;
  border: 1px solid #40587a;
  margin-left: 32rpx;
}

#searchModel .btnGroup button:first-child {
  background: white;
  color: #40587a;
  border: 1px solid #40587a;
}

#searchModel .scale {
  width: 208rpx;
}

#searchModel .deepBlue {
  color: #40587a;
}

#searchModel .rotate {
  transform: rotate(180deg);
  transform-origin: 6rpx 3rpx;
}

#searchModel .checkOne {
  border: 1px solid #40587a;
}

#searchModel .search_icon {
  padding: 10rpx 30rpx;
}

/*----------------------------------searchModel--------------------------------------------------------  */

#searchModel2 {
  height: 112rpx;
  background: #f3f4f8;
}

#searchModel2 .scroll {
  width: 640rpx;
  flex-wrap: nowrap;
  overflow-x: scroll;
}

#searchModel2 .label {
  padding: 12rpx;
  background: rgba(0, 158, 255, 0.10);
  border: 1px solid rgba(0, 158, 255, 0.20);
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #009eff;
  margin: 0 16rpx;
  margin-top: 40rpx;
  height: 28rpx;
  position: relative;
}

#searchModel2 .label image {
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  top: 8rpx;
  right: 0;
  padding: 10rpx;
}

#searchModel2 .allReset {
  margin-left: 32rpx;
  font-size: 24rpx;
  color: #009eff;
  line-height: 112rpx;
}

/*--------------------------------联动版下拉框-----------------------------------------------------------  */

#linkedDrop {
  width: 100%;
}

#linkedDrop scroll-view {
  height: 100%;
}

#linkedDrop .frame_province {
  width: 33.3%;
  background: #f2f2f2;
}

#linkedDrop .frame_city {
