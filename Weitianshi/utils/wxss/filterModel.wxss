}

#linkedDrop .province, .city {
  text-align: center;
  justify-content: center;
  color: #666;
  font-size: 26rpx;
  position: relative;
}

#linkedDrop .checkOn {
  background: white;
}

#linkedDrop .gouhao {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 50rpx;
  top: 20rpx;
}
