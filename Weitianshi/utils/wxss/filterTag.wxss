.filterBlock {
  padding: 8rpx 0 8rpx 32rpx;
}

.mainTitle {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.subTitle {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
  margin-bottom: 20rpx;
}

.content {
  flex-wrap: wrap;
  flex-direction: row;
}

.tag {
  text-align: center;
  font-size: 24rpx;
  border-radius: 4rpx;
  width: 155rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 1rpx solid #ccc;
  margin-right: 20rpx;
  margin-bottom: 32rpx;
  color: #666;
}

.autoLength {
  width: 214rpx;
  height: auto;
  padding: 12rpx 0rpx;
  line-height: 30rpx;
}

.check {
  background: #293b55;
  border-color: #293b55;
  color: white;
}

/*------------------------------按钮组-----------------------------------------  */

.buttonArry {
  background: white;
  padding: 32rpx 32rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 0.5rpx solid #f0f0f0;
}

.buttonArry .reset {
  padding: 24rpx 76rpx;
  text-align: center;
  color: #293b55;
  border: 1px solid #293b55;
  border-radius: 4rpx;
  margin-right: 32rpx;
  line-height: 1;
  font-size: 30rpx;
}

.buttonArry .certain {
  background: #293b55;
  padding: 24rpx 189rpx;
  text-align: center;
  border-radius: 4rpx;
  color: white;
  line-height: 1;
  font-size: 30rpx;
}
.hoverBlue{
  color: #24344c;
}
