  height: 72rpx;
  line-height: 72rpx;
  background: #f14b50;
  margin-right: 30rpx;
}

.jumpFirst {
  margin-left: 32rpx;
  font-size: 30rpx;
  color: #f7c660;
  text-align: center;
  border: 2rpx solid #f7c660;
  border-radius: 96rpx;
  width: 154rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: #f14b50;
  margin-right: 30rpx;
}

.shareMore {
  background: #f7c660;
  border-radius: 96rpx;
  width: 312rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 30rpx;
  color: #fff;
}

.buttonBox {
  background: #f14b50;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 104rpx;
  padding-top: 32rpx;
}

.waitSure {
  color: #fff;
  text-align: center;
  opacity: 0.5;
}

.fourImage {
  width: 35rpx;
  height: 35rpx;
