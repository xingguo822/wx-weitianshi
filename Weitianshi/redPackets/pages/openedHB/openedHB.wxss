page {
  background: #f14b50;
}

.HBrecordTitile, .moreHB { 
  width: 100%;
  font-size: 30rpx;
  color: #f7c660;
  text-align: center;
  padding: 32rpx 0 0 0;
  justify-content: center;
  align-items: center;
}

.aline {
  background: none;
}

.moreHB {
  font-size: 30rpx;
}

.seeMore {
  font-size: 24rpx;
  color: #f7c560;
  text-align: center;
  margin: 8rpx 0 40rpx 0;
}

.sendHB {
  font-size: 30rpx;
  color: #f7c660;
  text-align: center;
  border: 2rpx solid #f7c660;
  border-radius: 96rpx;
