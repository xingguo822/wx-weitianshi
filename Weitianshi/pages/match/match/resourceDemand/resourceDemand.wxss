/* pages/resourceEnchange/resourceEnchange.wxss */

page {
  background: white;
}

#resourceEnchange {
  padding: 0 32rpx;
}

.context {
  flex-wrap: wrap;
  flex-direction: row;
}

.title {
  font-size: 24rpx;
  text-align: center;
  padding: 32rpx 0;
  color: #666;
}

.tips {
  display: flex;
  font-size: 28rpx;
  margin-bottom: 24rpx;
  border-radius: 8rpx;
  justify-content: center;
  align-content: baseline;
  width: 23%;
  margin-right: 2%;
  color: #999;
  height: 76rpx;
  line-height: 76rpx;
}

.tips view {
  border: 1px solid #999;
  border-radius: 8rpx;
}

.offer view:first-child {
  justify-content: space-between;
}
.search view:first-child{
  justify-content: space-between;
}


.context wx-view:first-child {
  padding-left: 0;
  font-size: 24rpx;
  width: 100%;
  text-align: center;
}

.flex .title:first-child {
  padding-left: 0;
}

.offer .flex:first-child {
  padding-left: 0;
}
.search .flex:first-child{
  padding-left: 0
}

.offerAdd, .searchAdd {
  color: #40587a;
}

.search{
  margin-top: 0
}

.describe{
  font-size: 24rpx;
  color: #333;
  padding-bottom: 32rpx;
  padding-top: 24rpx;
}

textarea {
  background: #f2f2f2;
  border-radius: 4px;
  padding:32rpx;
  font-size: 28rpx;
  margin-bottom: 64rpx;
  height: 240rpx;
}
