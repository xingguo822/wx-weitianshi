/*头部*/

.r_nav {
  display: flex;
  text-align: center;
  align-items: baseline;
  background: white;
}

.r_nav .nav_btn {
  color: #999;
  /*width: 106rpx;*/
  height: 46rpx;
  font-size: 30rpx;
  line-height: 46rpx;
  margin-top: 26rpx;
  margin-bottom: 24rpx;
}

.r_nav  .nav_on {
  /*border: 1rpx solid #333;
border-radius: 100rpx;*/
