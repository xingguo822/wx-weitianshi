.outBox {
  background: #fff;
}

.radioBlock {
  margin: 0 32rpx;
  border-bottom: 1rpx solid #e6e6e6;
  height: 112rpx;
  line-height: 112rpx;
  font-size: 32rpx;
  color: #333;
  position: relative;
}

.outBox :last-child {
  border: none;
}

.radioBox {
  position: absolute;
  right: 0;
}

.remarkDes {
  margin: 32rpx 0;
  background: #fff;
  width: 91.4%;
  height: 264rpx;
  padding: 32rpx;
  font-size: 28rpx;
  color: #999;
  line-height: 30rpx;
}

.choiceBox {
  margin: 0 32rpx;
  border-bottom: 1rpx solid #e6e6e6;
  justify-content: space-between;
}
.content {
  font-size: 28rpx;
  color: #333;
  line-height: 112rpx;
  height: 112rpx;
}
.switchTab {
  line-height: 112rpx;
  text-align: right;
}