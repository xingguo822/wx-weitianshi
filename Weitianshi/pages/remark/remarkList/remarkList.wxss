page {
  background: #fff;
}

.bigBox {
  margin: 32rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.userInfo{
  margin-bottom:12rpx;
}
.userPic {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.userText {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  font-size: 32rpx;
  color: #40587a;
  line-height: 80rpx;
  text-align: center;
  background: #f0f0f0;
  margin-right: 16rpx;
}

.personName {
  font-size: 28rpx;
  color: #3a3e4a;
  line-height: 28rpx;
  text-align: left;
}

.personPosition {
  font-size: 24rpx;
  color: #666;
  line-height: 24px;
  text-align: left;
}

.personAuthentication {
  font-size: 20rpx;
  color: #d3b987;
  line-height: 20rpx;
  text-align: left;
}

.personCompany {
  font-size: 24rpx;
  color: #666;
  letter-spacing: 0;
  line-height: 24rpx;
  text-align: left;
}

.starBlock {
  padding-top: 54rpx;
  padding-bottom: 46rpx;
}

.starNum {
}

.starTitle {
  font-size: 24rpx;
  color: #fc703e;
  line-height: 24rpx;
}

.starTime {
  font-size: 20rpx;
  color: #999;
  line-height: 20rpx;
  text-align: right;
}

.gradeDes {
  font-size: 24rpx;
  color: #3a3e4a;
  line-height: 24rpx;
  text-align: left;
  padding-bottom: 32rpx;
}
