.flex {
  display: flex;
}

.number {
  /* margin-top: 10rpx; */
}

.netWorkNum {
  background: #E43D59;
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  font-size: 24rpx;
  border-radius: 50%;
  margin-left: 220rpx;
  line-height: 40rpx;
  margin-top: 23rpx;
  text-align: center;
}

.netWorkNumAfter {
  width: 20px;
  height: 16px;
  font-size: 24rpx;
  border-radius: 50%;
  margin-left: 228rpx;
  padding-top: 6rpx;
  margin-top: 4rpx;
}

.iconEdit {
  width: 12rpx;
  height: 20rpx;
  display: block;
  padding: 10rpx 8rpx;
  margin-top: 8rpx;
}

/*身份认证 */

.messageBox {
  background: #fff;
  width: 375px;
  height: 132rpx;
  position: relative;
  margin-bottom: 32rpx;
}

.messageInside {
  padding: 50rpx 34rpx 50rpx 32rpx;
}

.identity {
  background: #40587a;
  border-radius: 4rpx;
  width: auto;
  height: 54rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 54rpx;
  text-align: center;
  white-space: nowrap;
  padding: 0 20rpx;
  position: absolute;
  right: 34rpx;
  top: 45rpx;
}

.identityIcon {
  border-radius: 2rpx;
  width: 32rpx;
  height: 24rpx;
  margin-right: 36rpx;
}

/*审核信息  */

.identifyContent {
  font-size: 24rpx;
  color: #40587a;
  line-height: 24rpx;
  text-align: center;
  white-space: nowrap;
  justify-content: space-between;
  position: absolute;
  right: 32rpx;
  width: 120rpx;
  top: 54rpx;
}

.on {
  color: #ccc;
}

/*底部信息提示  */

.bottomBox {
  margin-top: 320rpx;
}

.contactPerson {
  font-size: 28rpx;
  color: #666;
  line-height: 28rpx;
  text-align: center;
  margin-bottom: 16rpx;
}

.wechatNumber {
  font-size: 24rpx;
  color: #999;
  line-height: 24rpx;
  text-align: center;
}
