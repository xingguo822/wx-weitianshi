/* pages/message/message/message.wxss */

.myApplyProject, .myPushProject, .beAddedContacts {
  background: white;
  text-align: center;
  margin-top: 32rpx;
}

.addedContacts {
  height: 56rpx;
  padding: 40rpx 20rpx 40rpx 50rpx;
}

.beAddedContacts:first-child {
  margin-top: 0;
}

.messageList {
  height: 106rpx;
  padding: 34rpx 42rpx 34rpx 32rpx;
  align-items: center;
  position: relative;
}

.messageList .title {
  font-size: 32rpx;
  text-align: left;
  color: #333;
  line-height: 98rpx;
  width: 400rpx;
  margin-top: 6rpx;
}

.title {
  justify-content: space-between;
  font-size: 32rpx;
  text-align: left;
  color: #333;
  line-height: 32rpx;
  width: 400rpx;
}

.title_icon {
  width: 158rpx;
  height: 105rpx;
  margin-right: 24rpx;
}

