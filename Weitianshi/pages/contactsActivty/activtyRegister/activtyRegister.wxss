.userBox {
    height: 114rpx;
    background: #fff;
    line-height: 112rpx;
    border-bottom: 1px #e6e6e6 solid;
    justify-content: space-between;
    padding: 0 32rpx;
}

.arrowStyle {
    margin-top: 47rpx;
    width: 12rpx;
    height: 20rpx;
}

.personListTile {
    font-size: 32rpx;
    color: #333;
}

.personListContent {
    font-size: 28rpx;
    color: #333;
    text-align: right;
    margin-right: 12rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    width: 480rpx;
}

.personListContent .avatar {
    width: 66rpx;
    height: 66rpx;
    border-radius: 50%;
    margin-top: 24rpx;
}

.save {
    background: #40587a;
    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    border-radius: 0;
    color: white;
    font-size: 30rpx;
    text-align: center;
}
