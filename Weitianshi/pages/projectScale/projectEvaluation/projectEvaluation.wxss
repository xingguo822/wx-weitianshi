/* pages/projectScale/projectEvaluation.wxss */

.slider {
  width: 100%;
  height: auto;
  background: #fff;
  margin: 0 auto;
  padding-top: 56rpx;
  padding-bottom: 40rpx;
}
.scoreWhite{
  width: 100%;
  height: 150rpx;
  background: #ffffff;
}
.sliderTitle {
  width: 80%;
  height: 2rpx;
  background: #e6e6e6;
  margin: 0 auto;
  position: relative;
  margin-bottom: 32rpx;
}

.sliderTitle1 {
  font-size: 12px;
  color: #666;
  position: absolute;
  left: 25%;
  top: -20rpx;
  text-align: center;
  width: 50%;
  background: #fff;
  height: 24rpx;
}

.sliderScale {
  font-size: 24px;
  color: #fc703e;
  margin: 0 auto;
  width: 180rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.scaleIntroduce {
  width: 300rpx;
  font-size: 14px;
  color: #fc703e;
  margin: 0 auto;
  text-align: center;
  margin-bottom: 64rpx;
}

.sliderSlider {
  width: 80%;
  margin: 0 auto;
  position: relative;
  margin-bottom: 80rpx;
}

.sliderMin {
  position: absolute;
  display: inline-block;
  font-size: 14px;
  color: #666;
  left: 0;
  top: 0;
}

.sliderMax {
  position: absolute;
  display: inline-block;
  font-size: 14px;
  color: #666;
  right: 0;
  top: 0;
}

.body-view {
  width: 85%;
  margin: 0 auto;
}

.sliderLeft {
  width: 4rpx;
  height: 26rpx;
  background: #ccc;
  position: absolute;
  left: 80rpx;
  top: 4rpx;
}

.sliderRight {
  width: 4rpx;
  height: 26rpx;
  background: #ccc;
  position: absolute;
  right: 80rpx;
  top: 4rpx;
}

#textContent {
  border: 2rpx solid #e6e6e6;
  border-radius: 4rpx;
  width: 70%;
  height: 120rpx;
  margin: 0 auto;
  font-size: 24rpx;
  color: #333;
  text-align: left;
  padding: 20rpx 20rpx;
}

.scoreItem {
  width: 95%;
  height: auto;
  background: #fff;
  margin-top: 32rpx;
  /* padding: 32rpx; */
  padding-bottom: 32rpx;
  padding-top: 32rpx;
  padding-left: 32rpx;
  /* margin-bottom: 190rpx; */
}

.scoreTitle {
  width: 100%;
  font-size: 15px;
  color: #333;
  text-align: left;
}

.scoreLine {
  width: 92%;
  height: 2rpx;
  background: #e6e6e6;
  margin-top: 30rpx;
}

.scoreItem1 {
  width: 100%;
  height: auto;
  margin-top: 40rpx;
}

.scoreItem1Left {
  width: 75%;
}

.scoreItem1Right {
  width: 30%;
}

.scoreItem1Left1 {
  font-size: 14px;
  color: #333;
}

.scoreItem1Left2 {
  margin-top: 10rpx;
  font-size: 12px;
  color: #666;
  line-height: 35rpx;
}

.scoreItem1Right input {
  /* margin-top: 20rpx; */
  width: 140rpx;
  height: 80rpx;
  border: 2rpx solid #e6e6e6;
  font-size: 14px;
  color: #333;
  text-align: center;
  border-radius: 5rpx;
}

.total {
  font-size: 12px;
  color: #666;
  width: 70%;
}

.totalNum {
  font-size: 20px;
  color: #fc703e;
  width: 30%;
  text-align: center;
}

.totalTotal {
  margin-top: 32rpx;
}

.submit {
  width: 100%;
  height: 90rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  line-height: 90rpx;
  background: #40587a;
  font-size: 14px;
  color: #fff;
  z-index: 111;
}
