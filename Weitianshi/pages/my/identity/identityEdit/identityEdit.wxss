.visitCard {
  background: #fff;
  width: 91.5%;
  height: 34rpx;
  padding: 40rpx 32rpx;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.visitCardMessage {
  font-size: 32rpx;
  color: #333;
  line-height: 32rpx;
}

.pushIdCard {
  /* background: #ccc; */
  border-radius: 4rpx;
  width: 56rpx;
  height: 44rpx;
}

.personList {
  background: #fff;
}

.personListTile, .investListTile {
  font-size: 32rpx;
  color: #333;
}

.personListContent {
  font-size: 28rpx;
  color: #ccc;
  text-align: right;
  margin-right: 12rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 480rpx;
}

.chooseContent {
  font-size: 28rpx;
  color: #ccc;
  text-align: right;
  margin-right: 12rpx;
}

.userBox, .investBox {
  width: 100%;
  height: 114rpx;
  background: #fff;
  line-height: 112rpx;
}

.userNameContent, .userPhoneContent, .userBrandContent, .userCompanyContent,
.userPositionContent, .userEmailContent, .userDescribeContent, .investContent {
  justify-content: space-between;
  margin: 0 32rpx;
  border-bottom: 1rpx solid #e6e6e6;
  height: auto;
}

.userDescribeContent {
  border-bottom: none;
}

.arrowStyle {
  margin-top: 47rpx;
  width: 12rpx;
  height: 20rpx;
}

.choice:first-child {
  margin-top: 28rpx;
}

