.point {
  font-size: 24rpx;
  color: #666;
  letter-spacing: 0;
  line-height: 94rpx;
  text-align: left;
  height: 94rpx;
  margin-left: 36rpx;
}

.btn {
  height: 88rpx;
  width: 100%;
  background: #40587a;
  font-size: 32rpx;
  color: #fff;
  line-height: 88rpx;
  text-align: center;
  position: fixed;
  /* top: 1126rpx; */
  bottom: 0;
}

.personListContentAfter {
  font-size: 28rpx;
  color: #666;
  margin-right: 12rpx;
  text-align: right;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 480rpx;
}

.chooseAfter {
  font-size: 28rpx;
  color: #666;
  margin-right: 12rpx;
  text-align: right;
}

.investStyle {
  font-size: 28rpx;
  color: #666;
  line-height: 112rpx;
  text-align: right;
   text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  margin-right: 12rpx;
}

.overMore {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 470rpx;
  /* display: inline-block; */
    /* flex-direction: row;
  justify-content:flex-end;  */
   float:right; 
  /* flex-wrap:nowrap;  */
}

.error {
  background: rgba(0, 0, 0, 0.80);
  border-radius: 4px;
  text-align: center;
  position: fixed;
  height: 45rpx;
  line-height: 45rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  color: #fff;
  }
