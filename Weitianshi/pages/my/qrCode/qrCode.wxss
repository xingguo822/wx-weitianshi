/* pages/my/qrCode/qrCode.wxss */

page {
  color: #333;
  width: 100%;
  /*height: 100%;*/
  position: relative;
}

#my {
  height: 100%;
}

/*用户名片*/

.user_edit {
  display: block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 0;
  margin: 0;
  padding: 0;
  border: none !important;
}

.user_edit image {
  width: 40rpx;
  height: 40rpx;
  margin: auto;
}

.user_email label {
  margin-right: -40rpx;
  margin-top: -40rpx;
}

.user_info {
  margin: 40rpx 32rpx;
  background: white;
  justify-content: space-between;
  padding: 32rpx;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}

.user_left {
  width: 73%;
}

.user_left .flex:first-child {
  align-items: flex-end;
  margin-bottom: 96rpx;
}

.noPic {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #f2f2f2;
  font-size: 64rpx;
  color: #10587a;
  line-height: 160rpx;
  text-align: center;
}

.user_right {
  width: 22%;
  height: 120rpx;
}

.user_right image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user_down {
  background: white;
  padding: 32rpx 64rpx;
  margin-bottom: 32rpx;
}

.user_pic, user_text {
  display: flex;
  flex-direction: column-reverse;
}

.user_name {
  font-size: 56rpx;
}

.user_career {
  font-size: 32rpx;
  color: #666;
  margin-left: 24rpx;
}

.user_company, .user_mobile, .user_email {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

#user_mobile {
  color: #009eff;
  text-decoration: underline;
}

.user_email {
  justify-content: space-between;
  margin-bottom: 0;
  width: 604rpx;
}

/*---------二维码图片-------------------*/

.QR_code {
  margin-top: 32rpx;
  width: 100%;
  /*height: 742rpx;*/
  background: #fff;
}

.QR_box {
  padding-top: 40rpx;
  padding-bottom: 108rpx;
}

.QR_title {
  height: 32rpx;
  margin: 0 88rpx 0 104rpx;
  font-size: 32rpx;
  color: #333;
  letter-spacing: 0;
  line-height: 32rpx;
  text-align: left;
}

.QR_pic {
  width: 288rpx;
  height: 288rpx;
  margin: 44rpx 230rpx 20rpx 232rpx;
}

.QR_point {
  font-family: MicrosoftYaHei;
  font-size: 12px;
  color: #999;
  letter-spacing: 0;
  text-align: center;
}

/*按钮样式*/

.addFriend {
  background: #40587a;
  width: 750rpx;
  height: 98rpx;
  position: fixed;
  left: 0;
  bottom: 0;
}

#share {
  font-size: 24rpx;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
  background: #40587a;
  padding: 24rpx 98rpx 30rpx 122rpx;
  border: none !important;
  outline: none;
  position: static;
}

.addFriend .long {
  background: #e6e6e6;
  width: 4rpx;
  height: 30rpx;
  margin-top: 32rpx;
}

#QR_save {
  font-size: 24rpx;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
  width: 50%;
  background: #40587a;
  padding: 22rpx 68rpx 30rpx 46rpx;
}

#QR_save::after {
  border: 0;
}

.line {
  background: #e6e6e6;
  width: 622rpx;
  height: 1rpx;
  margin-top:32rpx;
  display: inline-block;
}

.messageIconStyle {
  width: 32rpx;
  height: 28rpx;
  /* margin-right:42rpx; */
  /* margin-left:42rpx; */
}
.iconBox{
  margin-top:20rpx;
  width:662rpx;
}
.littleBox{
  margin-right:84rpx;
}
