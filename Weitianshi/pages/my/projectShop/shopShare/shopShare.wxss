}

.shopTitle {
  font-size: 48rpx;
  color: #333;
  line-height: 68rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  padding:0 48rpx;
}

