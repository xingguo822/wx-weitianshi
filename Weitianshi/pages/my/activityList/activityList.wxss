.activityBox {
  padding: 32rpx;
  background: white;
  margin-bottom: 32rpx;
  padding-bottom: 26rpx;
}

.topBox {
  margin-bottom: 32rpx;
}

.activityBox .activityPic {
  height: 120rpx;
  width: 180rpx;
  background-image: linear-gradient(-180deg, #f5f5fa 0%, #d7d7e1 100%);
  border-radius: 4rpx;
  margin-right: 24rpx;
}

.activityBox .activityContent {
  font-size: 32rpx;
  color: #333;
  max-width: 482rpx;
  font-weight: bold;
}

.activityBox .middleLine {
  height: 1rpx;
  background: #f0f0f0;
  width: 100%;
}

.activityBox .bottomPic {
  margin-right: 12rpx;
  height: 48rpx;
  width: 48rpx;
  border-radius: 100%;
  background: pink;
}

.activityBox .bottomBox {
  margin-top: 32rpx;
  justify-content: space-between;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999;
}

.activityBox .title {
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
  height: 40rpx;
}

.activityInfo {
  color: #151515;
}

.backgroundPic {
  width: 750rpx;
  height: 2852rpx;
}
