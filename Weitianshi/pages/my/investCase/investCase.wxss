.weui-media-box__desc {
  color: #999;
  font-size: 13px;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.weui-media-box__desc:last-child {
  border-right: none;
}

.edit {
  justify-content: flex-end;
}

.img_frame {
  align-items: baseline;
  justify-content: space-between;
}

.editIcon {
  width: 32rpx;
  height: 32rpx;
}

.tip {
  margin-right: 24rpx;
  font-size: 20rpx;
  color: #999;
  border-radius: 98rpx;
  border: 1px solid #e0e0e0;
  padding: 0 16rpx;
  height: 26rpx;
  line-height: 26rpx;
  margin-top: 20rpx;
}

.weui-media-box {
  padding: 15px;
  position: relative;
}

.title {
  font-size: 26rpx;
  color: #333;
  margin-bottom:24rpx;

}
