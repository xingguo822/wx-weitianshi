/* pages/my/cardEdit/cardEdit.wxss */

page {
  color: #333;
  font-size: 28rpx;
  background: white;
}

#cardEdit {
  padding: 32rpx;
}

input, textarea {
  border-radius: 8rpx;
}

.text {
  padding: 32rpx 0;
  font-size: 24rpx;
  color: #333;
  margin-top: 16rpx;
}

.card input {
  padding: 0 32rpx;
  background: #f2f2f2;
  border: 1px solid #f2f2f2;
  height: 88rpx;
  line-height: 88rpx;
}

.card textarea {
  background: #f2f2f2;
  height: 208rpx;
  padding: 32rpx;
  margin: 0;
  width: 618rpx;
}

.save {
  background: #40587a;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  border-radius: 0;
  color: white;
  font-size: 30rpx;
  text-align: center;
}

.noChange {
  border: 1px solid #e0e0e0;
  padding: 0 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}
#describe{
  margin-bottom: 90rpx;
}