  background: #f0f0f0;
}

.activityBox .noBottomPic {
  margin-right: 6rpx;
  height: 48rpx;
  width: 48rpx;
  border-radius: 100%;
}

.activityBox .bottomBox {
  margin-top: 32rpx;
  justify-content: space-between;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999;
}

.outBox {
  padding: 32rpx;
  margin-top: 32rpx;
  background: white;
}

.baseIntro {
