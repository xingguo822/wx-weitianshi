.activityBox {
  padding: 32rpx;
  background: white;
}

.topBox {
  margin-bottom: 32rpx;
}

.activityBox .activityPic {
  height: 120rpx;
  width: 180rpx;
  margin-right: 24rpx;
  border-radius: 4rpx;
}

.activityBox .activityContent {
  font-size: 32rpx;
  color: #333;
  max-width: 482rpx;
  font-weight: bold;
}

.activityBox .middleLine {
  height: 1rpx;
  background: #f0f0f0;
