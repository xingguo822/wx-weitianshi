}

.newBox {
  text-align: right;
  height: 112rpx;
  line-height: 112rpx;
  /* width: 536rpx; */
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
