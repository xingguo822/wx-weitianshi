.boxStyle {
  background: #fff;
}

.bottomStyle {
  margin-bottom: 24rpx;
}

/*验证码按钮*/

.getCode {
  position: absolute;
}

.clear {
  position: absolute;
  top: 24rpx;
  right: -3rpx;
  z-index: 999;
  border: none;
  font-size: 26rpx;
  color: #3378e0;
}

.registerNum  .clearOn {
  background: #fff;
  color: grey;
}

button[disabled][type="default"], wx-button[disabled]:not([type]) {
  background: #fff;
}

.btnBox {
  margin: 0 48rpx;
}
