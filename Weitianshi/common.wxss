scroll-view {
  height: 100%;
}

button {
  padding: 0;
  margin: 0;
  padding-left: 0;
  padding-right: 0;
  margin-left: 0;
  margin-right: 0;
  position: static;
  border-radius: 0;
  background: white;
  /* text-align: left; */
}

button::after {
  border: none;
  width: auto;
  height: auto;
  background: white;
}

